<idea-plugin>
    <id>com.guohanlin.yapiquicktype</id>
    <name>Yapi QuickType</name>
    <vendor email="2318560278@qq.com">郭翰林</vendor>

    <description>
        <![CDATA[
           <h1>YApi QuickType plugin</h1>
           <p>Open API through YApi, quickly generate plug-ins for interface entity code, support language：</p>
           <p>Java、Kotlin、Dart、TypeScript、Swift、OC、Go、C++</p>
           <p>Source address：</p>
           <a href="https://github.com/RmondJone/YapiQuickType">https://github.com/RmondJone/YapiQuickType</a>
           <p>QuickType service source code：</p>
           <a href="https://github.com/RmondJone/QuickTypeNode">https://github.com/RmondJone/QuickTypeNode</a>

           <h1>YApi QuickType插件</h1>
           <p>通过YApi开放Api，快速生成接口实体代码的插件,支持语言：</p>
           <p>Java、Kotlin、Dart、TypeScript、Swift、OC、Go、C++</p>
           <p>源码地址：</p>
           <a href="https://github.com/RmondJone/YapiQuickType">https://github.com/RmondJone/YapiQuickType</a>
           <p>QuickType服务源码：</p>
           <a href="https://github.com/RmondJone/QuickTypeNode">https://github.com/RmondJone/QuickTypeNode</a>
           <br/>
           <br/>
           <img src="http://yingsizhence.test.upcdn.net/yinsizhence/step_one.png"/>
           <br/>
           <img src="http://yingsizhence.test.upcdn.net/yinsizhence/step_two.png"/>
        ]]>
    </description>

    <idea-version since-build="171"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectConfigurable instance="com.guohanlin.ProjectSettingConfig"/>
        <postStartupActivity implementation="com.guohanlin.YApiApplication"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>com.guohanlin.ProjectSettingConfig</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="com.guohanlin.api" class="com.guohanlin.YApiAction" text="YApi代码生成插件"
                icon="/icons/action.svg" description="YApi代码生成插件">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>